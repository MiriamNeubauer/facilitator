<div class="panel panel-default">

	<div class="panel-body">
		<%= link_to 'Back', pins_path %>
	</div>

	<div class="panel-heading center">
		<%= image_tag @pin.image.url(:medium) %>
		<!-- link is from https://github.com/thoughtbot/paperclip -->
	</div>

	<div class="panel-body user">
		<%= @pin.user.name if @pin.user %>
		<%= @pin.description %>
		<% if @pin.user == current_user%>
			<%= link_to 'Edit', edit_pin_path(@pin) %>
      <%= link_to 'Delete', pin_path(@pin), method: :delete, data: { confirm: 'Are you sure?'}%>
		<% end %>
	</div> <hr>

  <div class="panel-body user">
    <h4>Comments</h4>  
    <!-- Section1: Showcasing a comment -->
    <div id="comments">
      <%= render :partial => @pin.comments %>
    </div>
    <!-- Section2: Adding a new comment -->
    <%= simple_form_for [@pin, Comment.new] do |f| %>
      <p>
        <%= f.input :content, :label => "New Comment", as: :text, input_html:{rows: "3"}%>

      </p>
      <p> <%= f.submit "Add Comment", class: "btn btn-primary" %></p>
    <%end%>
  </div>
</div>	